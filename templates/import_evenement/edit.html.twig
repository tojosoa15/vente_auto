{% extends 'base.html.twig' %}

{% block title %}Modifier Evenement{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/evenement.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap/bootstrap.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/jquery/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap/bootstrap.min.js') }}"></script>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="content container-fluid">
            <div class="kl-title-tab-gp d-flex justify-content-between">
                <h2 class="kl-title-default-tb">Modification evenement</h2>
            </div>
            <div class="card kl-card-detail-prd kl-bg-white">
                <div class="card-body p-0">
                    <div class="kl-wrapper-default-table row gx-0">
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.businessAccount) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.eventAccount) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.lastEventCount) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.fileNumber) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.civilityWording) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.currentVehicleOwner) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.routeNumberAndName) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.adressComplement) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.postalCode) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.city) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.homePhone) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.cellPhone) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.phoneJob) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.dateOfCirculation) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.purchaseDate) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.lastEventDate) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.brandName) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.modelWording) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.version) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.vin) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.registration) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.leadType) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.mileage) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.energyLabel) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.sellerVN) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.sellerVO) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.billingComment) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.typeVoVn) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.fileNumberVnVo) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.vnSalesIntermediary) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.eventDate) }}
                        </div>
                        <div class="col-sm-4 pt-2">
                            {{ form_row(form.originOfEvent) }}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" onclick="window.location='{{ path('import_evenements') }}';">Annuler</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}